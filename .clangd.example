CompileFlags:
  Add:
    - "-std=c++20"
    - "-stdlib=libc++"
    - "-I{{PROJECT_ROOT}}/Bedrock"
    - "-I{{PROJECT_ROOT}}/Bedrock/libstuff"
    - "-I{{PROJECT_ROOT}}/Bedrock/mbedtls/include"
    - "-DGIT_REVISION=dev"
    - "-DSQLITE_ENABLE_NORMALIZE"
  Remove:
    - "-W*"  # Remove all warnings for cleaner IntelliSense

Index:
  Background: Build
  
Diagnostics:
  ClangTidy:
    Add: 
      - "readability-*"
      - "modernize-*"
      - "performance-*"
    Remove:
      - "readability-magic-numbers"
      - "readability-identifier-length"
      - "modernize-use-trailing-return-type"
  UnusedIncludes: Strict
  
InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
